<h1>New Post</h1>

<%= form_for @post do |f| %>
  <div class="post">
    <div>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :body %><br>
      <%= f.text_area :body %>
    </div>
    <%= f.submit('Submit', class: 'btn success') %>
  </div>
<% end %>
<%= link_to 'Back', posts_path %>
